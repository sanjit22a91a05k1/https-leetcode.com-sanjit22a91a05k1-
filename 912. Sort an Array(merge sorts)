class Solution {
public:
    void merge(vector<int> &nums, int l, int r, int mid)
    {
        vector<int>b(r-l+1);
        int i=l, j=mid+1;
        int k=0;
        while(i<=mid && j<=r)
        {
            if(nums[i]<=nums[j])
            {
                b[k]=nums[i];
                k++;
                i++;
            }
            else 
            {
                b[k]=nums[j];
                k++;
                j++;
            }
        }
                
                while(i<=mid)
                {
                    b[k]=nums[i];
                    i++;
                    k++;
                }
                while(j<=r)
                {
                    b[k]=nums[j];
                    j++;
                    k++;
                }
        for(int k=0; k<r-l+1; k++)
        {
            nums[k+l]=b[k];
        }

    }
    void mergeSort(vector<int> &nums, int l, int r)
    {
        if(l>=r)
        {
            return;
        }
        int mid = (l+r)/2;
        mergeSort(nums, l, mid);
        mergeSort(nums, mid+1, r);
        merge(nums, l, r, mid);
    }
    vector<int> sortArray(vector<int>& nums) {
        mergeSort(nums, 0, nums.size()-1);
        return nums;
    }
};
